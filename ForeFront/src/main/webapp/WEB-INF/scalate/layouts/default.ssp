<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN"
        "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<%@ var body: String %>
<%@ var title : String = "Lift Web Framework" %>
<%@ var msgs : String = "" %>
<html>
<head>
  <meta http-equiv="content-type" content="text/html; charset=UTF-8"/>
  <meta name="description" content=""/>
  <meta name="keywords" content=""/>

  <title>${title}</title>
  <style>
    .sidebar ul {
      margin: 0;
      padding: 0;
      border-bottom: 1px solid #ccc;
    }

    .sidebar ul li {
      margin: 0;
      padding: 0;
      list-style: none;
      border: 1px solid #ccc;
      border-bottom: none;
    }

    .sidebar ul li a {
      display: block;
      padding: 3px;
      text-indent: 30px;
      text-decoration: none;
    }

    .sidebar ul li span {
      display: block;
      padding: 3px;
      text-indent: 30px;
      text-decoration: none;
    }

    .sidebar ul li a:hover {
      background-color: #eee;
    }
  </style>
</head>
<body>
<div class="container">


  <div class="column span-6 colborder sidebar">
    <hr class="space"/>
    Menu goes here

    <div>
      ${msgs}
      <hr class="space"/>
    </div>
  </div>

  <div class="column span-17 last">
     ${unescape(body)}
  </div>

  <hr/>
</div>
</body>
</html>
